<h1>Hair Salon Database</h1>

<h1>All stylists</h1>
@if (@Model.Count == 0)
{
  <p>There are no stylists.</p>
}
<ul>
  @foreach (var stylist in Model)
  {
    <li><a href="/stylists/@stylist.GetId()">@stylist.GetName()</a></li>
  }
</ul>
<p>Add new Stylist:</p>

<form action="/stylist/new" method="post">
  <label for="stylist-name">Stylist's name</label>
  <input id="stylist-name" name="stylist-name" type="text">
  <button type="submit">Add</button>
</form>
